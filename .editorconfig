# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
max_line_length = 120
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
