{
    "name": "primitives",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/primitives",
    "prefix": "rdx",
    "projectType": "library",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/angular:package",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "packages/primitives/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "packages/primitives/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "packages/primitives/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "compodoc": {
            "executor": "nx:run-script",
            "options": {
                "script": "compodoc"
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/primitives/jest.config.ts"
            }
        },
        "nx-release-publish": {
            "dependsOn": ["build"],
            "options": {
                "packageRoot": "{workspaceRoot}/dist/{projectRoot}"
            }
        }
    }
}
