{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "resolveJsonModule": true,
        "module": "CommonJS",
        "types": [
            "node"
        ]
    },
    "include": [
        "**/src/**.ts",
        "**/*.ts"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/stories/**.*",
        "*.stories.ts",
        "./schematics/**/*.ts"
    ]
}
