{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "../**/*.spec.ts"
    ],
    "include": [
        "../**/*.stories.ts",
        "../**/*.stories.js",
        "../**/*.stories.jsx",
        "../**/*.stories.tsx",
        "../**/*.stories.mdx",
        "*.js",
        "*.ts"
    ]
}
